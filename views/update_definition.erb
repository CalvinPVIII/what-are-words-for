<h2>Update definition</h2>
<form  action="/words/<%= @word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="definition">Redefine <%= @word.word %></label>
  <input type="text" name="definition" value="">
  <button type="submit" name="button">Redefine</button>
</form>

<br>
<br>
<form  action="/words/<%= @word.id %>/definitions/<%= @definition.id %>/delete" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Definition</button>
</form>
